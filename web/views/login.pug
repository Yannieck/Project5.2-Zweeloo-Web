    body
        style.
            :root {
                --maincolor: #fff5d2;
                --secondcolor: #ffefb9;
            }

            body {
                font-family: 'Poppins', sans-serif;
                background-color: #ffefb9;
            }

            #main_container {
                background-color: var(--secondcolor);
            }

            #content {
                background-color: var(--maincolor);
            }

            #login_box {
                background-color: var(--secondcolor)
            }

            #login_button {
                background-color: #00427d;
            }
        include head.pug
        block content
            .w-full.flex.justify-center.overflow-hidden(class='h-[92%]')
                .flex.flex-wrap.rounded-lg.items-center.justify-center(class='w-[99%] h-[100%]')#main_container
                    .flex.overflow-hidden.rounded-lg.justify-center.items-center(class='w-[40%] h-4/6')#content
                        .flex.items-center.justify-center
                            .w-full.max-w-md
                                .shadow-lg.rounded.px-12.pt-6.pb-8.mb-4#login_box
