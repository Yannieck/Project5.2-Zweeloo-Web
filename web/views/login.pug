html
    head
        include head.pug
        title login
        script(src='/scripts/login.js' type='module' defer)

    body.clr-bg-main(class='border-[20px] clr-border-sec')
        include header.pug
        block content
            .w-full.flex.flex-col.justify-center.py-12.px-8.overflow-y-auto(class='h-[calc(100%-4rem)] md:px-32')
                .w-full.flex.justify-center
                    .justify-center(class="w-1/2").clr-bg-sec.px-16.py-8
                        h1.text-4xl.font-bold.mb-5 Log In

                        label.text-gray-700.text-sm.font-normal.mb-2(for="email") Email
                        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.mb-4(class='focus:outline-none focus:shadow-outline' name='email' type='email' placeholder='Email' required autofocus )#email

                        label.text-gray-700.text-sm.font-normal.mb-2(for="password") Wachtwoord
                        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.mb-6(class='focus:outline-none focus:shadow-outline' name='password' type='password' placeholder='Password' required autocomplete='current-password')#password

                        button.px-4.py-2.rounded.text-white.inline-block.shadow-lg.clr-acc-blue#login_button Log In


