html
    head
        include head.pug
        title index

    body.clr-bg-main
        include header.pug
        block content
            .w-full.flex.justify-center.overflow-hidden(class='md:h-[93%]')
                .flex.flex-wrap.rounded-lg.items-center.justify-center(class='md:w-[99%] md:h-[93%]').clr-bg-acc
                    .overflow-hidden.rounded-lg(class='w-[90%] h-5/6').clr-bg-main
                        .m-5
                            h1.text-4xl.font-bold.font-sans.mb-5 Profile

                            .grid.grid-rows-1.font-sans.rounded-lg(class='h-2/5').clr-bg-acc
                                .p-3.shadow-sm.rounded-sm
                                    .flex.items-center.space-x-2.font-semibold.text-gray-900.leading-8
                                        span(class='text-green-500')
                                            svg.h-5(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                                                path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z')
                                        span.tracking-wide About
                                    .text-gray-700
                                        .grid.text-sm(class='md:grid-cols-2')
                                            .grid.grid-cols-2.my-1
                                                .px-7.py-2.font-semibold First Name
                                                input(value=user.first_name).px-4.py-2.rounded-lg
                                            .grid.grid-cols-2.my-1
                                                .px-7.py-2.font-semibold Last Name
                                                input(value=user.last_name).px-4.py-2.rounded-lg
                                            .grid.grid-cols-2.my-1
                                                .px-7.py-2.font-semibold Email
                                                input(value=user.email).px-4.py-2.rounded-lg
                                            .grid.grid-cols-2.my-1
                                                .px-7.py-2.font-semibold Created at
                                                input.px-4.py-2.rounded-lg(value= new Date(user.created_at).toLocaleString())
                                            .grid.grid-cols-2.my-1
                                                .px-7.py-2.font-semibold Updated at
                                                input.px-4.py-2.rounded-lg(value= new Date(user.updated_at).toLocaleString())