html
    head
        include head.pug
        title Profiel

    body.h-full.clr-bg-main(class='border-[20px] clr-border-sec')
        include header.pug
        block content
            .w-full.flex.flex-col.py-12.px-8.overflow-y-auto(class='h-[calc(100%-4rem)] md:px-32')
                .px-16.w-full
                    script.
                        let message = "#{status}";
                    script(src="/scripts/swal.js")

                    h1.text-4xl.font-bold.mb-5 Profiel

                    .grid.text-sm(class='md:grid-cols-2').gap-x-32.w-full
                        form(action=`/form/editcredentials` method="post").mb-2
                            h2.text-2xl.font-bold.mb-4 Profielgegevens aanpassen

                            label.font-bold.block(for="firstname") First Name
                            input(value=user.first_name name="firstname" placeholder="Voornaam").block.p-1.font-normal.w-full.mb-4

                            label.font-bold.block(for="lastname") Last Name
                            input(value=user.last_name name="lastname" placeholder="Achternaam").block.p-1.font-normal.w-full.mb-4

                            label.font-bold.block(for="email") Email
                            input(value=user.email name="email" placeholder="Email").block.p-1.font-normal.w-full.mb-4

                            input.btn(type="submit" value="Update gegevens")

                        form(action=`/form/editpass` method="post").mb-2
                            h2.text-2xl.font-bold.mb-4 Wachtwoord aanpassen

                            label.font-bold.block(for="currentPass") Huidig wachtwoord
                            input(type="password" name="currentPass" placeholder="Huidig wachtwoord...").block.p-1.font-normal.w-full.mb-4

                            label.font-bold.block(for="newPass") Nieuw wachtwoord
                            input(type="password" name="newPass" placeholder="Nieuw wachtwoord...").block.p-1.font-normal.w-full.mb-4

                            label.font-bold.block(for="newPassRepeat") Herhaal nieuwe wachtwoord
                            input(type="password" name="newPassRepeat" placeholder="Herhaal niew wachtwoord...").block.p-1.font-normal.w-full.mb-4

                            input.btn(type="submit" value="Update Wachtwoord")
                .line