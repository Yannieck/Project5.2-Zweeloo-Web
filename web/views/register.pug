html
    head
        include head.pug
        title index

    body.clr-bg-main(class="border-[20px] clr-border-sec")
        include header.pug
        block content
            .w-full.flex.flex-col.py-12.px-8.overflow-y-auto(class="h-[calc(100%-4rem)] md:px-32")
                .px-16.w-full                
                    script.
                        let message = "#{status}";
                    script(src="/scripts/swal.js")

                    h1.text-4xl.font-bold.mb-5 Profile

                    form(class="w-3/4" method="post" action="/auth/register")
                        .flex.w-full.gap-4
                            div(class="w-1/2")
                                label.text-gray-700.text-sm.font-normal.mb-2(for="first_name") First name                        
                                input.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="text" name="first_name" placeholder="First Name" required)#first_name
                            div(class="w-1/2")
                                label.text-gray-700.text-sm.font-normal.mb-2(for="last_name") Last name
                                input.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="text" name="last_name" placeholder="Last Name" required)#last_name

                        label.block.text-gray-700.text-sm.font-normal.mb-1(for="email") Email
                        input.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type="email" name="email" placeholder="Email" required)#email

                        label.block.text-gray-700.text-sm.font-normal.mb-1(for="password") Password
                        input.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password" name="password" placeholder="Password" required)#password

                        label.block.text-gray-700.text-sm.font-normal.mb-1(for="password_repeat") Repeat Password
                        input.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password" name="password_repeat" placeholder="Repeat Password" required)#password_repeat

                        button.px-4.py-2.mt-4.rounded.bg-blue.text-white.inline-block.clr-acc-blue#register_button(type="submit") Register
                .line