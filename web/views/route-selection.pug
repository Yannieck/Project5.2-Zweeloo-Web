    body
        style.
            :root {
                --maincolor: #fff5d2;
                --secondcolor: #ffefb9;
            }

            body {
                font-family: 'Poppins', sans-serif;
                background-color: var(--maincolor);
            }

            #main_div {
                background-color: var(--secondcolor);
            }

            /* both of these classes are used in routeselection.js */
            .bgmain {
                background-color: var(--maincolor);
            }

            .bgsecond {
                background-color: var(--secondcolor);
            }
        include head.pug
