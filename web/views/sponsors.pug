html
    head
        include head.pug
        title index

    body.h-full.clr-bg-main(class="border-[20px] clr-border-sec")
        include header.pug
        block content
            .w-full.flex.flex-col.py-12.px-8.overflow-y-auto(class="h-[calc(100%-4rem)] md:px-32")
                .px-16.w-full.relative
                    script.
                        let message = "#{status}";
                    script(src="/scripts/swal.js")

                    h1.text-4xl.font-bold.mb-5 Sponsoren

                    a.btn.absolute.right-16.top-0(href="http://") Sponsor Toevoegen

                    //- Loop through all sponsors and generate a tile
                    each sponsor, index in sponsors
                        .w-full.h-24.mb-5.flex.flex-row
                            //- Load the image data
                            img(src="data:image/jpg;base64," + sponsor.logo).h-full.aspect-video.object-cover.rounded.mr-5
                            .w-full.flex
                                .flex-row.w-full
                                    //- Title
                                    p.font-bold.text-lg
                                        | !{sponsor.name}
                                    .flex
                                        //- Additional sponsor information
                                        .mr-5
                                            p Adres:
                                            p Link:
                                        .w-full
                                            p !{sponsor.adress}
                                            a.link(href=sponsor.link, target="_blank" rel="noopener noreferrer") !{sponsor.link}
                                //- Edit/Delete buttons
                                .p-1.flex.justify-center.flex-col.gap-2
                                    .text-center
                                        a.btn.w-40.block(href='') Bewerken
                                    .text-center
                                        a.btn.w-40.block.btn-delete(href=`/api/sponsors/delete/${sponsor.id}`) Verwijderen
                .line